<resources>

    <!-- This must be a fullscreen theme for the alarm to be able to turn the screen on. -->
    <style name="DialogTheme" parent="android:style/Theme.Holo.Dialog" />
    <style name="WpasAlertFullScreenTheme" parent="android:style/Theme.Holo.NoActionBar.Fullscreen" />
    <style name="AlertFullScreenTheme" parent="android:Theme.Holo.Wallpaper.NoTitleBar" />
    <style name="ChannelSetActivityTheme" parent="@android:style/Theme.Material.Light.Dialog"/>
     <style name="CbHolo_Ex_Theme_M" parent="@android:style/Theme.Material.Light">
         <item name="android:actionBarStyle">@style/m_actionBar_style</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowQP</item>
    </style>
    <style name="m_actionBar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/m_actionBar_titleStyle</item>
    </style>
    <style name="m_actionBar_titleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_color</item>
    </style>
        <style name="ActionBarOverflowQP" parent="@android:style/Widget.Material.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_light</item>
    </style>
    <style name="fullScreen_dialog" parent="android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>
