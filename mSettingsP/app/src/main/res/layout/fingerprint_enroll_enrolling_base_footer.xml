<!--Begin modified by jinlong.lu for XRP10024314 on 18-10-13 -->
<!--add linear layout id for footer view-->
<!--Begin modified by jinlong.lu for XRP23604 on 18-9-7 -->
<!--add android:orientation="vertical" android:gravity="right"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SuwGlifButtonBar"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:id="@+id/view_enroll_footer"
    android:layout_height="wrap_content">
<!--End modified by jinlong.lu for XRP23604 on 18-9-7 -->
<!--End modified by jinlong.lu for XRP10024314 on 18-10-13 -->
    <!--Begin modified by jinlong.lu for XR6618444 on 18-7-31-->
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <Button
        style="@style/SuwGlifButton.Secondary"
        android:id="@+id/skip_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security_settings_fingerprint_enroll_enrolling_skip"
        android:gravity="left"/>

    <Button
        android:id="@+id/find_sensor_button"
        style="@style/SuwGlifButton.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_fingerprints_sensor_button"
        android:gravity="left"/>
    <!--End modified by jinlong.lu for XR6618444 on 18-7-31-->
</LinearLayout>
