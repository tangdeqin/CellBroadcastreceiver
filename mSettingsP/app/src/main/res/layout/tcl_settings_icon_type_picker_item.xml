<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground" >

    <!-- Modified layout_marginLeft 4dp to 1dp for by zubai.li XR6006716 on 2018.02.29-->
    <ImageView
        android:id="@+id/icontype_icon"
        android:layout_width="@dimen/simtype_icon_size"
        android:layout_height="@dimen/simtype_icon_size"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical" />

    <!-- remove android:paddingRight="8dp", change Text to MarqueeText, add ellipsize and fadingEdge by zubai.li -->
    <!-- change MarqueeText back to Text by zubai.li for XR6006716 new ergo-->
    <TextView
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:id="@+id/icontype_text"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        style="?android:attr/textAppearanceMedium" />

</LinearLayout>
