<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="50dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/status_bar_normal_style"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/status_bar_normal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DE000000"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="@string/status_bar_normal_title" />
                <TextView
                    android:id="@+id/status_bar_normal_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#8A000000"
                    android:textSize="14dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:text="@string/status_bar_normal_summary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="10dp">

                <RadioButton
                    android:id="@+id/status_bar_normal_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:background="#ffffff"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/normal_img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:src="@drawable/normal_style_icon"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f1f1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="50dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/status_bar_hide_style"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/status_bar_hide_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DE000000"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="@string/status_bar_hide_title" />
                <TextView
                    android:id="@+id/status_bar_hide_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#8A000000"
                    android:textSize="14dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:text="@string/status_bar_hide_summary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="10dp">

                <RadioButton
                    android:id="@+id/status_bar_hide_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:background="#ffffff"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/hide_img"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:src="@drawable/hide_style_icon"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
